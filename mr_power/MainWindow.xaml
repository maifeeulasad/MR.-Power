<Window x:Class="mr_power.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mr_power"
        mc:Ignorable="d"
		ResizeMode="NoResize"
		
		
		
        Title="Mr. Power" Height="65" Width="290" Topmost="True">



	<Grid>




		<StackPanel Orientation="Horizontal" Background="#99ff99">
			


			<Button Content="History" FontSize="8"  Margin="5" Background="Aqua" Width="35" Name="historyButton" Click="historyButton_Click"/>

			<ProgressBar Value="50" Width="130" Margin="5" BorderThickness="1" BorderBrush="Red" Background="Cornsilk" Name="batteryParcentage" Foreground="LightCoral"  ></ProgressBar>
			<Button Content="Exit" FontSize="8" Margin="5"  Background="Aqua" Width="35" Name="exitButton" Click="exitButton_Click"/>

			<Button Content="Close" FontSize="8" Margin="5" Background="Aqua" Width="35" Name="closeButton" Click="closeButton_Click"/>

		</StackPanel>


	</Grid>

	

</Window>
    